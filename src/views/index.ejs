<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-5">
          <h1 class="display-1 text-center">Agenda</h1>
          <p class="text-center lead">Seus contatos salvos de maneira segura!</p>


          <%- include('includes/messages') %>

            <div class="responsive-table">
              <table class="table my-3">
                <% contacts.forEach(contact=> { %>

                  <tr>
                    <td>
                      <%= contact.name %>
                    </td>
                    <td>
                      <%= contact.lastname %>
                    </td>
                    <td>
                      <%= contact.email %>
                    </td>
                    <td>
                      <%= contact.phone %>
                    </td>
                    <td><a href="/contato/<%= contact._id %>">Editar</a></td>
                    <td><a class="text-danger" href="/contato/delete/<%= contact._id %>">Deletar</a></td>
                  </tr>

                  <% }) %>

              </table>
            </div>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>